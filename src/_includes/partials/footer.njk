      <div class="container-Social md:order-2">
        <div class="mb-3 md:hidden">
        <a aria-label="Desktop Logo" href="/" class=" mx-auto {{ colors.logoCustom.desktop or colors.logoDefault.desktop }} hover:{{ colors.logoCustom.hover or colors.logoDefault.hover }}" alt="Desktop Logo">
              {# {% svg "distordev-svg", "fill-current h-8 hover:{{ colors.logoCustom.hover or colors.logoDefault.hover }}", "The Logo" %} #}
          <img class="h-14 mx-auto" src="/assets/svg/logo.svg" alt="icono de {{site.platform}}">
