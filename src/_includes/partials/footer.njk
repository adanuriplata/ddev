        </div>
        <div class="flex justify-center {{ colors.socialIconsCustom or colors.socialIconsDefault }}">
          {% if globals.g_showFooterSocialIcons %}

            {# Display Social icons from _data/social.json  #}
            {% for site in social %}
              {% if site.url %}
                <a aria-label="Link to {{ site.platform }}" class="hover:{{ colors.socialIconsHoverCustom or colors.socialIconsHoverDefault }}" target="_blank" href="{{ site.url | url }}">
                  {# {% svg site.platform, "mx-2 h-6 w-6 fill-current", site.platform, "footer" %} #}
                  <img class="mx-2 h-6 w-6" src="/assets/svg/{{site.platform}}.svg" alt="icono de {{site.platform}}">
                
                </a>
              {% endif %}
            {% endfor %}

          {% endif %}
